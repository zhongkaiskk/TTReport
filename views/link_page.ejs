<script>
    document.addEventListener('DOMContentLoaded', () => {
        const form = document.getElementById('reportForm');
        const loaderOverlay = document.getElementById('loaderOverlay');

        const calculateInputs = () => {
            const input5 = Number(document.getElementById('input5').value) || 0;
            const input6 = Number(document.getElementById('input6').value) || 0;
            const input7 = Number(document.getElementById('input7').value) || 0;
            const input8 = Number(document.getElementById('input8').value) || 0;
            const input13 = Number(document.getElementById('input13').value) || 0;
            const input10 = Number(document.getElementById('input10').value) || 0;
            const input17 = Number(document.getElementById('input17').value) || 0;
            const input18 = Number(document.getElementById('input18').value) || 0;

            // Calculate input9 as the sum of input5, input6, input7, input13, and input8
            const input9 = input5 + input6 + input7 + input13 + input8;
            document.getElementById('input9').value = input9;  // input9 is read-only

            // Set input15 to input10 (input15 is read-only)
            document.getElementById('input15').value = input10;

            // Set input9, input19, and input20 to the same value (input9)
            document.getElementById('input19').value = input9;  // input19 is read-only
            document.getElementById('input20').value = input9;  // input20 is read-only

            // Calculate input16 (input16 is read-only)
            const input16 = input10 - (input17 + input18 + input9);
            document.getElementById('input16').value = input16;  // input16 is read-only
        };

        // Attach input event listeners for calculations
        ['input5', 'input6', 'input7', 'input8', 'input13', 'input10', 'input17', 'input18'].forEach(id => {
            document.getElementById(id).addEventListener('input', calculateInputs);
        });

        // Initial calculations
        calculateInputs();

        // Show loader on form submit
